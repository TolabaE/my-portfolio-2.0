const personalProjects = [
    {
        name:"proyecto de desarrollo web",
        description:"HTML,CSS,SASS,GRID,@media, bootstrap",
        gitHub:"https://github.com/TolabaE/proyectoWeb",
        linkDeploy:"https://pimentonrojo.netlify.app",
        picture:"/proyectoweb.webp"
    },
    {
        name:"proyecto de JavaScript",
        description:"HTML,CSS,SASS,@media,JSON,Fetch",
        gitHub:"https://github.com/TolabaE/proyectoJavaScript",
        linkDeploy:"https://ecommerceferreteria.netlify.app",
        picture:"/proyectoJavascript.webp"
    },
    {
        name:"Ecommerce Phone-Store",
        description:"HTML,CSS,React JS,Bootstrap,Firebase,Sweetalert2 ,@media",
        gitHub:"https://github.com/TolabaE/ecommerReactJs",
