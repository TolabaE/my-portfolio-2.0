---
interface Props{
    image?: string,
    technologies?: string,
    gitHub?:string,
    deploy?:string,
    title?:string
}


const {image,technologies,gitHub,deploy,title} = Astro.props;
---

<div class="card__project">
    <h4>{title}</h4>
    <div class="card__project-img">
        <img src={image} alt="imagen de la pagina principal del proyecto"/>
    </div>
    <div class="card__project-tools">
        <b>{technologies}</b>
    </div>
    <div class="container__card-button">
        <button class="btn-proyect-github"><a target="_blank" href={gitHub}>GitHub</a></button>
        <button class="btn-proyect-deploy"><a target="_blank" href={deploy}>Demo</a></button>
    </div>
</div>
