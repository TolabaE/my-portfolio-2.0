<script>
    const etiqueta = document.getElementById('text-development');
    const texts = 'Full Stack Web Developer ';

    let long = texts.length;
    let count = 0;

    function writeTextDom() {
        if (count < texts.length) {
            etiqueta.textContent += texts.charAt(count);//corta la letra de acuerdo a la posicion del contador.
            count++;
        }else{
            deleteTextDom();
        }
    }

    function deleteTextDom(){
        if (count === texts.length) {
            etiqueta.textContent = texts.substring(0,long);
            long--;
            if (long === -2) {
                etiqueta.textContent = ''
                long = texts.length;
                count = 0;
            }
        }
    }

    setInterval(writeTextDom,350);

</script>
