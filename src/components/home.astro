<script>
    const etiqueta = document.getElementById('text-development');
    const texts = 'Full Stack Web Developer     ';

    function writeTextDom() {
        const textArray = texts.split('');//corta las palabras y los guarda en un nuevo arreglo.
        let count = 0;
        setInterval(() => {
            etiqueta.innerHTML += textArray[count];
            count++;
            if (count === textArray.length+1) {
                count = 0;
                etiqueta.innerHTML = '';
            }
        }, 250);
    }
    writeTextDom();
</script>